<%- include('./partials/header.ejs') %>

<div class="details content">
  <h2><%= blog.title %></h2>
  <div class="content">
    <p><%= blog.body %></p>
  </div>
  <div class="blog-actions">
    <a href="/blogs/<%= blog.id %>/edit" class="edit-btn">Edit Blog</a>
    <form action="/blogs/<%= blog.id %>/delete" method="POST" class="delete-form">
      <button type="submit" class="delete-btn" onclick="return confirm('Are you sure you want to delete this blog?')">Delete Blog</button>
    </form>
  </div>
</div>

<%- include('./partials/footer.ejs') %>
